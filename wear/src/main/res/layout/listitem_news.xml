<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:background="#ffedfde4">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv_title_newsList"
            android:id="@+id/tv_title_newsList"
            android:gravity="right"
            android:textColor="#000" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv_from_newsList"
            android:id="@+id/tv_from_newsList"
            android:textColor="#ff434343"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv_date_newsList"
            android:id="@+id/tv_received_newsList"
            android:gravity="right"
            android:layout_marginLeft="20dp"
            android:textColor="#ff343434"
            android:layout_weight="0.89" />
    </LinearLayout>

</LinearLayout>