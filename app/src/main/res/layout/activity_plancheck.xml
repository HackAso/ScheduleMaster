                android:id="@+id/textView17"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="90dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/planname_activity_newplan"
                android:id="@+id/textView18"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView19"
                android:textSize="20dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textViewPlanday"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="60dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textViewPlantime"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="70dp"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/member_activity_planchek"
            android:id="@+id/textView20"
            android:layout_marginLeft="30dp"
            android:textColor="#FF69B4"
            android:layout_marginTop="10dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="179dp"
            android:id="@+id/listViewAddmember"
            android:layout_weight="0.20"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewPlanchenge"
                android:background="@mipmap/chenge"
                android:layout_marginLeft="30dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewPlantouroku"
                android:background="@mipmap/checktouroku"
                android:layout_marginLeft="40dp" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>